<div class="container">
  <h1 class="text-center">Administrator</h1>
  <%= render 'admin/nav_links'%>
  <div class="text_center mt-5">
    <div class="btn-group">
      <%= link_to "Edit", edit_project_path(@project), class: "btn btn-warning"%>
      <%= button_to "Delete", @project, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger"%>
    </div>
  </div>
  <div class="row mt-1">
    <p>
      <strong>Title :</strong><%= @project.title%>
    </p>    
  </div>
  <div class="row mt-1">
    <p>
      <strong>Views : </strong><%= @project.views%>
    </p>
  </div>
  <div class="row mt-1">
    <p><strong>Author : </strong>
    <%= "#{@project.user.email} | #{@project.user.name} | #{pluralize(@project.user.views, "View")}" %>
    </p>
  </div>
  <div class="row mt-1">
    <strong>Body :</strong><%= @project.body%>
  </div>
  <div class="row mt-1">
       <strong><%= pluralize(@project.discussions.count, "Discussion")%> : </strong>
      <% @project.discussions.each do |discussion| %>
        <div class="row mt-1">
          <%= discussion.user.name %>
          <%= discussion.body%>
        </div>
      <%end%>
  </div>
</div>
