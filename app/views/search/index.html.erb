<div class="container">
  <h1 class="text-center"><%= pluralize(@projects.count, "Result")%></h1>
  <div class="container">
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
          <th><%= sort_link(@query, :body, "Project Content") %></th>
          <th><%= sort_link(@query, :user_name, "Users") %></th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= link_to project.title, project %></td>
            <td><%= project.body.to_plain_text.truncate_words(25) %></td>
            <td><%= link_to project.user.name, project.user %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>          
</div>
